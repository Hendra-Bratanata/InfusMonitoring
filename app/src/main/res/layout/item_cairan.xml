<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        card_view:cardCornerRadius="5dp">

    <LinearLayout

            android:id="@+id/cv_infus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <RelativeLayout
                android:id="@+id/item_infus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

            <ImageView
                    android:id="@+id/img_item_infus"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:contentDescription="@string/gambar_infus"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_infus"/>

            <TextView
                    android:paddingTop="8dp"
                    android:id="@+id/tv_item_tetes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_toEndOf="@id/img_item_infus"
                    android:layout_toRightOf="@id/img_item_infus"
                    android:textSize="16sp"
                    android:text="Faktor tetes     : Makro"
                    android:textColor="@color/colorBlack"/>

            <TextView
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:id="@+id/tv_item_jumlah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_item_tetes"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_toEndOf="@id/img_item_infus"
                    android:layout_toRightOf="@id/img_item_infus"
                    android:text="Jumlah Cairan : 800ml"/>

            <TextView
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:id="@+id/tv_item_batas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_below="@id/tv_item_jumlah"
                    android:layout_toEndOf="@+id/img_item_infus"
                    android:layout_toRightOf="@+id/img_item_infus"
                    android:text="Batas Cairan    : Tersedia"/>
        </RelativeLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

            <Button
                    android:id="@+id/btn_set_detail_cairan"
                    android:background="@drawable/button_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    android:text="lihat detail"/>


        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>