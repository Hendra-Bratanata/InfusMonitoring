<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="16dp"
    card_view:cardCornerRadius="5dp">

    <LinearLayout
        android:id="@+id/cv_infus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/item_infus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/img_item_infus"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:contentDescription="@string/gambar_infus"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_infus" />

            <TextView
                android:id="@+id/tv_item_tetes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/img_item_infus"
                android:layout_toRightOf="@id/img_item_infus"
                android:text="Faktor tetes :"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_ft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tv_item_jumlah"
                android:layout_alignParentRight="true"
                android:hint="500 ml"
                android:textSize="18sp"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/tv_item_jumlah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_item_tetes"
                android:layout_marginEnd="8dp"
                android:layout_toEndOf="@id/img_item_infus"
                android:layout_toRightOf="@id/img_item_infus"
                android:text="Jumlah Cairan :"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />

            <TextView
                android:textSize="18sp"
                android:id="@+id/tv_cairan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_item_tetes"
                android:layout_toEndOf="@id/tv_item_jumlah"
                android:hint="500 ml"
                android:layout_alignParentRight="true"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tv_item_batas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_item_jumlah"
                android:layout_toEndOf="@+id/img_item_infus"
                android:layout_toRightOf="@+id/img_item_infus"
                android:text="Cairan :"
                android:textColor="@color/colorBlack"
                android:textSize="18sp" />
            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/tv_stat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_item_jumlah"
                android:layout_toRightOf="@+id/tv_item_batas"
                android:hint=" ADA "
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:textColor="@color/colorBlack"
                android:textSize="18sp" />
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>