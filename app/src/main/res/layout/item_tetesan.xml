<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="4dp"
    card_view:cardCornerRadius="5dp">

    <LinearLayout

            android:id="@+id/cv_tetesan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <RelativeLayout
                android:id="@+id/item_tetesan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

            <ImageView
                    android:id="@+id/img_item_tetesan"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:contentDescription="@string/gambar_infus"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_waterdrop"/>

            <TextView
                    android:paddingTop="16dp"
                    android:id="@+id/tv_item_tetes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_toEndOf="@id/img_item_tetesan"
                    android:layout_toRightOf="@id/img_item_tetesan"
                    android:textSize="16sp"
                    android:text="Kondisi tetesan : Menetes"
                    android:textColor="@color/colorBlack"/>

            <TextView
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:id="@+id/tv_item_laju_tetes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_item_tetes"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_toEndOf="@id/img_item_tetesan"
                    android:layout_toRightOf="@id/img_item_tetesan"
                    android:text="TPM : 24 tetes/menit"/>

        </RelativeLayout>

